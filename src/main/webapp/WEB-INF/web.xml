<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>NireServleta</servlet-name>
        <servlet-class>com.example.wbserver.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NireServleta</servlet-name>
        <url-pattern>/ServletarenURIa</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>NireServletaHTML</servlet-name> <!-- nahi duzun izena jar dezakezu -->
        <servlet-class>com.example.wbserver.HelloServletHTML</servlet-class> <!--existitxen den klasea jarri behar da -->
    </servlet>
    <servlet-mapping>
        <servlet-name>NireServletaHTML</servlet-name> <!-- lehen hautatutako izen berdina jarri behar da  -->
        <url-pattern>/HellloServletHTMLarenURIa</url-pattern> <!--nahi duzun uria jar dezakezu -->
    </servlet-mapping>



    <servlet>
        <servlet-name>Login</servlet-name> <!-- nahi duzun izena jar dezakezu -->
        <servlet-class>nirepaketea.LoginServlet</servlet-class> <!--existitxen den klasea jarri behar da -->
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name> <!-- lehen hautatutako izen berdina jarri behar da -->
        <url-pattern>/servlet/Login</url-pattern> <!--nahi duzun uria jar dezakezu -->
    </servlet-mapping>



    <servlet>
        <servlet-name>LoginJSPServlet</servlet-name> <!-- nahi duzun izena jar dezakezu -->
        <servlet-class>nirepaketea.LoginJSPServlet</servlet-class> <!--existitxen den klasea jarri behar da -->
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginJSPServlet</servlet-name> <!-- lehen hautatutako izen berdina jarri behar da -->
        <url-pattern>/servlet/LoginJSP</url-pattern> <!--nahi duzun uria jar dezakezu -->
    </servlet-mapping>



    <servlet>
        <servlet-name>MainServlet</servlet-name> <!-- nahi duzun izena jar dezakezu -->
        <servlet-class>nirepaketea.MainServlet</servlet-class> <!--existitxen den klasea jarri behar da -->
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name> <!-- lehen hautatutako izen berdina jarri behar da -->
        <url-pattern>/servlet/MainServlet</url-pattern> <!--nahi duzun uria jar dezakezu -->
    </servlet-mapping>

</web-app>